<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.tab_2">

    <TextView
        android:id="@+id/textViewQueueTitile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:text="Enter Queue Titile"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/queueTitile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Example: Coffee Shop"
        app:layout_constraintTop_toBottomOf="@+id/textViewQueueTitile" />

    <TextView
        android:id="@+id/textViewAverageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:text="Enter Average Time per Client(in min)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/queueTitile"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/averageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="number"
        android:hint="Default: 2 min"
        app:layout_constraintTop_toBottomOf="@+id/textViewAverageTime"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/createQueueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Queue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/averageTime" />
</androidx.constraintlayout.widget.ConstraintLayout>